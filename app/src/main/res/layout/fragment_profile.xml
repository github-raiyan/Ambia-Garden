<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:background="#DDFFFFFF">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/img_user"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/user"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_usename"
                    android:text=""
                    app:layout_constraintTop_toBottomOf="@id/img_user"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_password"
                    android:text=""
                    app:layout_constraintTop_toBottomOf="@id/txt_usename"
                    app:layout_constraintStart_toStartOf="@id/txt_usename"
                    app:layout_constraintEnd_toEndOf="@id/txt_usename"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_expDate"
                    android:text=""
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/txt_password"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_logout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_expDate"
                    android:layout_marginTop="20dp"
                    android:text="Logout"
                    android:background="@drawable/round_shape2"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_logout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/bkash"
                    android:id="@+id/img_bkash"
                    app:layout_constraintEnd_toStartOf="@id/img_rocket"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="@id/img_bkash"
                    app:layout_constraintStart_toEndOf="@id/img_bkash"
                    app:layout_constraintEnd_toStartOf="@id/img_nagad"
                    android:src="@drawable/rocket"
                    android:id="@+id/img_rocket"
                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="@id/img_bkash"
                    app:layout_constraintStart_toEndOf="@id/img_rocket"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/nagad"
                    android:id="@+id/img_nagad"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"

                    app:layout_constraintTop_toBottomOf="@id/txt_number"
                    android:id="@+id/txt_mobileBanking"
                    android:text="@string/mobile_banking"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/img_bkash"
                    android:text="01571219418"
                    android:padding="3dp"
                    android:background="@color/white"
                    android:id="@+id/txt_number"
                    android:textStyle="italic"
                    android:textSize="15sp"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_copy"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/white"
                    app:layout_constraintStart_toEndOf="@id/txt_number"
                    android:src="@drawable/copy"
                    app:layout_constraintTop_toTopOf="@id/txt_number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/about"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/txt_number"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/about"
                    android:layout_marginBottom="60dp"
                    android:layout_marginTop="120dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/msg_flowtBtn"
            android:background="@drawable/round_shape"
            android:backgroundTint="#03A9F4"
            android:src="@drawable/flowting"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>